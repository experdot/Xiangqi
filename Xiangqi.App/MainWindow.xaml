<Window x:Class="Xiangqi.App.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Xiangqi.App" xmlns:control="clr-namespace:Xiangqi.App.Control"
        mc:Ignorable="d"
        Title="MainWindow" Height="1040" Width="1200" Loaded="Window_Loaded" WindowStartupLocation="CenterScreen">
    <Grid Margin="24">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"></ColumnDefinition>
            <ColumnDefinition Width="200"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <control:GameBoardControl x:Name="GameBoardControl" Grid.Column="0">

        </control:GameBoardControl>
        <Grid Grid.Column="1">
            <ListBox FontSize="24" FontFamily="SimSun" x:Name="MoveListBox">
            </ListBox>
        </Grid>
    </Grid>
</Window>
